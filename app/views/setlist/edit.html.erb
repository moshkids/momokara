<div class="container">
  <div class="row">
    <div class="span12 contents-header">
      <h2><%= @playlist.title %></h2>
    </div>
    <table class="table">
      <tbody id="sortable">
      <% @playlistDetails.each do |detail| %>
          <tr>
            <td>
              <%= detail.track_datum.title %>
            </td>
            <td>
              <i class="icon-remove"></i>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $('#sortable').sortable();
    $('#sortable').disableSelection();

    $('table td i').click(function(){
        $(this).parent().parent().remove();
    });
</script>
